<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.xszj.mba.utils.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:src="@drawable/tu_zhanweitu_houzi_gray"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:text="王英雄"
                android:textColor="@color/home_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:text="2016-10-11"
                android:textColor="@color/text_light_001"
                android:textSize="11sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tvc_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:gravity="center_vertical"
            android:text="ceo"
            android:textColor="@color/text_light_001"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/tvc_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            android:text="的方式的方式的方法水电费多少收到发送啊fsd发生的发生的手打多少撒 阿的"
            android:textColor="@color/home_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvc_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:text="参与话题"
            android:visibility="gone"
            android:textColor="@color/text_light_001"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            />

    </LinearLayout>


</LinearLayout>