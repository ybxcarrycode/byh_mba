<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_title_all"
    android:orientation="vertical" >

    <com.xszj.mba.view.GlobalTitleView
        android:id="@+id/globalTitleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp">

    </com.xszj.mba.view.GlobalTitleView>


    <RelativeLayout
        android:id="@+id/ll_comments_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fcfcfc"
        android:minHeight="50dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/iv_comment_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fillet_blue_btn"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="确定"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_pcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/iv_comment_now"
            android:background="@drawable/fillet_white_bg"
            android:hint="回复"
            android:maxHeight="100dp"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingTop="10dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_nocomments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_comments_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="还没有评论,快来抢沙发吧!"
        android:visibility="gone" />

    <com.xszj.mba.view.PullToRefreshView
        android:id="@+id/ptr_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/globalTitleView"
        android:layout_above="@+id/ll_comments_bottom"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/c1c1c1"
            android:dividerHeight="1px"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" >
        </ListView>
    </com.xszj.mba.view.PullToRefreshView>

    <com.xszj.mba.view.NormalEmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:visibility="gone" />

</RelativeLayout>