<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="115dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_interview_clearance"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#f5f5f5"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一键搞定MBA提前面试烦烦烦sdsdsdsdsd"
            android:textSize="14dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/home_text_color"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="21dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:00-18:30"
            android:textSize="12dp"
            android:textColor="@color/action_bar_tittle_color_555555"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_type1"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_weight="0"
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:background="#f5f5f5"
        >

        <View
            android:layout_centerVertical="true"
            android:layout_width="1dp"
            android:layout_marginLeft="5dp"
            android:background="@color/c999999"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/tv_time_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约"
            android:textColor="#7dcdf5"
            android:layout_marginTop="21dp"
            android:textSize="11dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/home_icon_appointment"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_type2"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_weight="0"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="#f5f5f5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_living"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播中"
            android:textSize="10dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>



</LinearLayout>