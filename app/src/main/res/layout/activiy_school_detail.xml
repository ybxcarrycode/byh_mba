<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_title_all"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <com.xszj.mba.view.GlobalTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/xinwen_rb1"
            style="@style/radio_style"
            android:checked="true"
            android:text="院校介绍" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <RadioButton
            android:id="@+id/xinwen_rb2"
            style="@style/radio_style"
            android:checked="false"
            android:text="最新资讯" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <RadioButton
            android:id="@+id/xinwen_rb3"
            style="@style/radio_style"
            android:checked="false"
            android:text="招办老师" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <RadioButton
            android:id="@+id/xinwen_rb4"
            style="@style/radio_style"
            android:checked="false"
            android:text="学长学姐" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_find" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>