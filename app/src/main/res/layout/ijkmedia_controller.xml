<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/topbar_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_mc" >


        <ImageButton
            android:id="@+id/mediacontroller_play_quit"
            android:layout_width="54.6dip"
            android:layout_height="32dip"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back_arrow_normal" />

        <Button
            android:id="@+id/select_srt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/select_bitrate"
            android:background="#00000000"
            android:text="字幕"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/screenshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/select_srt"
            android:background="#00000000"
            android:text="截图"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <com.easefun.polyvsdk.demo.view.SpeedButton
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/screenshot"
            android:background="#00000000"
            android:text=" 1x "
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/select_bitrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/landscape"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_media_fullscreen" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bitrate_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar_bg"
        android:orientation="vertical"
        android:visibility="invisible" >

        <Button
            android:id="@+id/zidong"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#00000000"
            android:textColor="#003399"
            android:textSize="15sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/liuchang"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#00000000"
            android:textColor="#003399"
            android:textSize="15sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/gaoqing"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#00000000"
            android:textColor="#003399"
            android:textSize="15sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/chaoqing"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#00000000"
            android:textColor="#003399"
            android:textSize="15sp"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bot"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_mc" >

        <LinearLayout
            android:id="@+id/Layout1"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >


            <ImageButton
                android:id="@+id/mediacontroller_play_pause"
                android:layout_width="54.6dip"
                android:layout_height="32dip"
                android:background="#00000000"
                android:gravity="center"
                android:src="@drawable/media_play" />

            <TextView
                android:id="@+id/mediacontroller_time_current"
                style="@style/MediaController_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingEnd="4dip"
                android:paddingStart="4dip"
                android:paddingTop="4dip"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/mediacontroller_seekbar"
                style="@style/MediaController_SeekBar"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:max="1000" />

            <TextView
                android:id="@+id/mediacontroller_time_total"
                style="@style/MediaController_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingEnd="4dip"
                android:paddingStart="4dip"
                android:paddingTop="4dip"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/mediacontroller_play_download"
                android:layout_width="54.6dip"
                android:layout_height="32dip"
                android:background="#00000000"
                android:gravity="center"
                android:src="@mipmap/icon_video_download_normal" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>