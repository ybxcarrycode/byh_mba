<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >

        <com.xszj.mba.utils.CircleImageView
            android:id="@+id/img_school"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/img_school"
            android:singleLine="true"
            android:text="北京大学"
            android:textColor="@color/c333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/img_school"
            android:singleLine="true"
            android:text="dddd"
            android:textColor="@color/tv_course_list_item_class"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/tv_people_num"
            android:singleLine="true"
            android:text="ddddd"
            android:textColor="@color/tv_course_list_item_class"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/line_find" />

</LinearLayout>