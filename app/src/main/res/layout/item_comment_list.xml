<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:orientation="vertical" >

    <com.xszj.mba.utils.CircleImageView
        android:id="@+id/iv_headiconcomment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/tu_zhanweitu_houzi_gray" />

    <TextView
        android:id="@+id/tv_comment_name"
        android:text="dfdf "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/iv_headiconcomment"
        android:singleLine="true"
        android:textColor="@color/c454545"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tag_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="kfldfk"
        android:layout_below="@id/tv_comment_name"
        android:layout_toRightOf="@id/iv_headiconcomment"
        android:textColor="@color/c1c1c1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tag_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/c1c1c1"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/commnet_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_comment_name"
        android:layout_below="@id/tag_tv"
        android:orientation="horizontal" >

      <!--   <TextView
            android:id="@+id/reply_to_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:paddingBottom="10dp"
            android:textColor="@color/c454545"
            android:textSize="16sp"
            android:visibility="gone" /> -->

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
           android:layout_marginBottom="7dp"
            android:textColor="@color/c454545"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_ctime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_comment_name"
        android:layout_below="@id/commnet_content_layout"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:drawableLeft="@mipmap/time_icon"
        android:drawablePadding="2dp"
        android:textColor="@color/c1c1c1"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/reply_ll"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/commnet_content_layout"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/fillet_attention_btn"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="回复"
            android:textColor="@color/c1c1c1"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@id/reply_ll"
        android:background="@color/white" />

</RelativeLayout>