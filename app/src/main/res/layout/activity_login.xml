<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/_img_login_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@mipmap/start_the_icon" />


        <EditText
            android:id="@+id/_edt_login_num"
            android:layout_width="@dimen/edt_length"
            android:layout_height="@dimen/edt_height"
            android:layout_below="@id/_img_login_icon"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@mipmap/login_roe"
            android:drawableLeft="@mipmap/icon_login_phone"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/hint_mobile_no"
            android:inputType="number|phone"
            android:paddingLeft="11dp"
            android:singleLine="true"
            android:textColor="@color/edt_text_color"
            android:textSize="@dimen/edt_text_size" />

        <EditText
            android:id="@+id/_edt_login_pwd"
            android:layout_width="@dimen/edt_length"
            android:layout_height="@dimen/edt_height"
            android:layout_below="@id/_edt_login_num"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@mipmap/login_roe"
            android:drawableLeft="@mipmap/icon_login_lock"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/hint_input_pwd"
            android:inputType="textPassword"
            android:paddingLeft="11dp"
            android:singleLine="true"
            android:textColor="@color/edt_text_color"
            android:textSize="@dimen/edt_text_size" />

        <TextView
            android:id="@+id/_txv_login_reg"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:background="@drawable/btnshape_one"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignTop="@+id/_btn_login_login"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="@dimen/edt_length"
            android:layout_height="27dp"
            android:layout_below="@+id/_edt_login_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <!-- <CheckBox
                 android:id="@+id/ck_login_rember_pwd"
                android:layout_height="35dp"
                 android:layout_width="35dp"
                 android:checked="true"
                 android:src="@drawable/btn_check"
                 android:layout_marginLeft="5dp"
                 android:layout_gravity="center_vertical"/>-->
            <CheckBox
                android:id="@+id/ck_login_rember_pwd"
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="记住密码"
                android:textColor="#49afe9"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/_txv_login_reg"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="@string/tip_regiest_tips"
            android:textColor="#A8A8A8"
            android:textSize="@dimen/txv_text_size" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tvQq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/tvQq_nn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_login_sanfang_qq_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvQq_nn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="QQ 登录"
                    android:textColor="#999999"
                    android:textSize="11sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wechat_nn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_login_sanfang_chat_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wechat_nn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="微信登录"
                    android:textColor="#999999"
                    android:textSize="11sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tencentWeibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/tencentWeibo_nn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_login_sanfang_weibo_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tencentWeibo_nn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="微博登录"
                    android:textColor="#999999"
                    android:textSize="11sp" />

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/_btn_login_login"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_alignEnd="@+id/_edt_login_pwd"
            android:layout_alignRight="@+id/_edt_login_pwd"
            android:layout_below="@+id/linearLayout"
            android:background="@drawable/btnshape"
            android:text="@string/str_btn_login"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/_txv_login_fbpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/textView15"
            android:layout_alignEnd="@+id/_btn_login_login"
            android:layout_alignRight="@+id/_btn_login_login"
            android:layout_marginBottom="35dp"
            android:text="@string/tip_pwd_back"
            android:textColor="#49afe9"
            android:textSize="13sp" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/img_login_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_login_off_press" />

</RelativeLayout>