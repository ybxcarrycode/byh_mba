<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/default_background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_title_all"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="考圈"
            android:textColor="@color/umeng_comm_white_color"
            android:textSize="16sp" />

    </RelativeLayout>

    <include
        android:id="@+id/topic_action_bar"
        layout="@layout/umeng_comm_fragment_title" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topic_action_bar"></android.support.v4.view.ViewPager>

</RelativeLayout>